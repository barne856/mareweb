{
	"name": "C++ WebGPU",
    "dockerComposeFile": "docker-compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspaces/mareweb",
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/adamlm/devcontainer-features/cmake": {
			"version": "3.29.5"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-vscode.cmake-tools",
				"matepek.vscode-catch2-test-adapter"
			]
		}
	},
	// make vscode user own the workspace and all mounts
	"postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder}",
	// prevent git dubious ownership
	"postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder} && echo 'source /opt/intel/oneapi/setvars.sh' >> ~/.bashrc"
}