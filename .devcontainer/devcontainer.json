{
	"name": "C++ WebGPU",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/adamlm/devcontainer-features/cmake": {
			"version": "3.29.5"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-vscode.cmake-tools",
				"matepek.vscode-catch2-test-adapter"
			]
		}
	},
	"mounts": [
		"source=mare-web-build,target=${containerWorkspaceFolder}/build,type=volume",
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	],
	"runArgs": [
		"--gpus", // enable GPU support
		"all", // enable all GPUs
		"--net", // enable network access
		"host" // use host network
	],
	// environment variables to forward to the container
	"remoteEnv": {
		"DISPLAY": ":0" // enable X11 forwarding
	},
	// make vscode user own the workspace and all mounts
	"postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder}",
	// prevent git dubious ownership
	"postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}