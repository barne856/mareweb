{
	"name": "C++ WebGPU",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/adamlm/devcontainer-features/cmake": {
			"version": "3.29.5"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-vscode.cmake-tools",
				"matepek.vscode-catch2-test-adapter"
			]
		}
	},
	"mounts": [
		"source=mare-web-build,target=${containerWorkspaceFolder}/build,type=volume"
	],
	"runArgs": [
		"--gpus=all", // enable GPU support for all GPUs
		"-e", "DISPLAY=${localEnv:DISPLAY}", // pass host DISPLAY environment variable
		"-v", "/tmp/.X11-unix:/tmp/.X11-unix" // mount X11 socket
	],
	"remoteEnv": {
		"DISPLAY": "${localEnv:DISPLAY}", // use host DISPLAY environment variable
		"LIBGL_ALWAYS_INDIRECT": "1" // force indirect rendering
	},
	// make vscode user own the workspace and all mounts
	"postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder}",
	// prevent git dubious ownership
	"postStartCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}
